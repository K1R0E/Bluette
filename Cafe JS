function showQuote() {
  const quotes = [
    "Take your time.",
    "One sip at a time.",
    "It’s okay to pause.",
    "Even the moon rests.",
    "Let stillness guide you.",
    "You’re allowed to exhale."
  ];
  const random = Math.floor(Math.random() * quotes.length);
  document.getElementById("quoteArea").innerText = quotes[random];
}

const prices = {
  "Rose Latte": 160,
  "Vanilla Cold Brew": 150,
  "Cloud Tea": 140,
  "Lavender Creambrew": 155,
  "Mocha Dust": 165,
  "Coconut Chai": 150
};

const drinkSelect = document.getElementById("drink");
const qtyInput = document.getElementById("qty");
const totalDisplay = document.getElementById("totalPrice");
const form = document.getElementById("orderForm");
const confirmation = document.getElementById("confirmation");
const againBtn = document.getElementById("orderAgainBtn");

function updatePrice() {
  const drink = drinkSelect.value;
  const qty = parseInt(qtyInput.value) || 0;
  const price = prices[drink] || 0;
  totalDisplay.textContent = `Total: ₱${price * qty}`;
}

if (form) {
  drinkSelect.addEventListener("change", updatePrice);
  qtyInput.addEventListener("input", updatePrice);

  form.addEventListener("submit", (e) => {
    e.preventDefault();

    const name = document.getElementById("name").value.trim();
    const drink = drinkSelect.value;
    const qty = parseInt(qtyInput.value);
    const special = document.getElementById("message").value.trim();
    const paymentMethod = document.querySelector('input[name="payment"]:checked');

    if (!name || !drink || !qty || !paymentMethod) {
      alert("Please fill in all required fields and select a payment method.");
      return;
    }

    const total = prices[drink] * qty;

    confirmation.innerHTML = `
      Thank you, <strong>${name}</strong>!<br/>
      Your order of <strong>${qty} ${drink}(s)</strong> has been received.<br/>
      <em>Special Request:</em> ${special || "None"}<br/>
      <em>Payment Method:</em> ${paymentMethod.value}<br/>
      <strong>Total: ₱${total}</strong>
    `;

    form.style.display = "none";
    confirmation.style.display = "block";
    againBtn.style.display = "inline-block";
  });

  againBtn.addEventListener("click", () => {
    form.reset();
    totalDisplay.textContent = "Total: ₱0";
    form.style.display = "block"; 
    confirmation.style.display = "none";
    againBtn.style.display = "none";
  });
}
